@model IEnumerable<e_commerce.Infrastructure.Entites.Seller>

@{
    ViewData["Title"] = "Sellers Management";
    Layout = "_AdminLayout";
}

<div class="container-fluid px-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="mt-4"><i class="fas fa-store me-2"></i>Sellers </h1>
        <div class="mb-3">
       
        </div>

    </div>

    <div class="card mb-4 shadow-sm">
        <div class="card-header bg-primary text-white">
            <div class="row align-items-center">
                <div class="col-md-6">
                    <i class="fas fa-table me-1"></i>
                    Seller Directory
                </div>
                <div class="col-md-6">
                    <form asp-action="Sellers" method="get" class="input-group">
                        <input type="text" name="searchString" class="form-control"
                               placeholder="Search by name, email or phone..."
                               value="@ViewData["CurrentFilter"]" />
                        <button type="submit" class="btn btn-light">
                            <i class="fas fa-search"></i> Search
                        </button>
                        <a asp-action="Sellers" class="btn btn-outline-light">
                            <i class="fas fa-sync-alt"></i>
                        </a>
                    </form>
                </div>
            </div>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover align-middle">
                    <thead class="table-light">
                        <tr>
                            <th width="5%">ID</th>
                            <th width="20%">Seller</th>
                            <th width="25%">Contact</th>

                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Any())
                        { @foreach (var seller in Model)
                            {
                                <tr>
                                    <td class="fw-bold">@seller.Id</td>
                                    <td>
                                        <div class="d-flex align-items-center">
                                            <div class="avatar-sm bg-light rounded me-3">
                                                <span class="avatar-text fw-bold">
                                                    @seller.ApplicationUser?.FirstName?[0]@seller.ApplicationUser?.LastName?[0]
                                                </span>
                                            </div>
                                            <div>
                                                <h6 class="mb-0">@seller.ApplicationUser?.FirstName @seller.ApplicationUser?.LastName</h6>
                                                <small class="text-muted">Seller ID: @seller.Id</small>
                                            </div>
                                        </div>
                                    </td>
                                    <td>
                                        <div><i class="fas fa-envelope me-2 text-muted"></i>@seller.ApplicationUser?.Email</div>
                                        <div><i class="fas fa-phone me-2 text-muted"></i>@seller.ApplicationUser?.PhoneNumber</div>
                                    </td>


                                </tr>
                            }
                        }

                    </tbody>
                </table>
            </div>

            <!-- Pagination -->
            <div class="d-flex justify-content-between align-items-center mt-3">
                <div class="text-muted">
                    Showing @Model.Count() of @ViewBag.TotalCount entries
                </div>
                <nav aria-label="Page navigation">
                    <ul class="pagination pagination-sm">
                        <li class="page-item disabled">
                            <a class="page-link" href="#" tabindex="-1">Previous</a>
                        </li>
                        <li class="page-item active"><a class="page-link" href="#">1</a></li>
                        <li class="page-item"><a class="page-link" href="#">2</a></li>
                        <li class="page-item"><a class="page-link" href="#">3</a></li>
                        <li class="page-item">
                            <a class="page-link" href="#">Next</a>
                        </li>
                    </ul>
                </nav>
            </div>
        </div>
    </div>
</div>


@section Scripts {



    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

}

