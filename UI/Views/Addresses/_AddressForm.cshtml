@model e_commerce.Infrastructure.Entites.Address
<div asp-validation-summary="All" class="text-danger mb-3"></div>

<!-- City Dropdown -->
<div class="form-group">
    <label asp-for="City" class="form-label required">City</label><br />
    <select asp-for="City" class="form-control" asp-items="ViewBag.Cities">
        <option value="">Select a City</option>
    </select>
    <span asp-validation-for="City" class="text-danger"></span>
</div>


<!-- Street -->
<div class="form-group">
    <label asp-for="Street" class="form-label required">Street</label><br />
    <input asp-for="Street" class="form-control" placeholder="Address line 1" />
    <span asp-validation-for="Street" class="text-danger"></span>
</div>

<!-- DeptNo (Optional) -->
<div class="form-group">
    <label asp-for="DeptNo" class="form-label">Department no</label><br />
    <input asp-for="DeptNo" class="form-control" placeholder="Apartment, suite, etc." />
    <span asp-validation-for="DeptNo" class="text-danger"></span>
</div>

<div class="form-group">
    <label asp-for="IsDefault" class="form-label">Set as Default</label><br />
    <input asp-for="IsDefault" class="form-check-input" />
    <span asp-validation-for="IsDefault" class="text-danger"></span>
</div>