@model e_commerce.Web.Models.LoginUserViewModel

@{
    var returnUrl = Context.Request.Query["ReturnUrl"].ToString();
}

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Login";
}



<section class="login-register section--lg">
    <div class="login-register__container container grid">
        <div class="login">
            <h3 class="section__title">Login</h3>
            <form asp-action="Login" class="form grid">
                <div asp-validation-summary="All" class="text-danger"></div>

                <input asp-for="Email" class="form__input" placeholder="Your Email" />
                <span asp-validation-for="Email" class="text-danger"></span>

                <input asp-for="Password" class="form__input" placeholder="Your Password" />
                <!-- Hidden input to carry ReturnUrl -->
                <input type="hidden" name="returnUrl" value="@returnUrl" />              
                <span asp-validation-for="Password" class="text-danger"></span>

                <!-- 🔹 Forgot password link -->
                <div class="form__forgot-password">
                    <a href="@Url.Action("ForgotPassword", "Account")" class="link">Forgot your password?</a>
                </div>

                <div class="form-group form-check">
                    <label class="form-check-label">
                        <input class="form-check-input" asp-for="RememberMe" />
                        @Html.DisplayNameFor(model => model.RememberMe)
                    </label>
                </div>
             

                <div class="form__btn">
                    <button type="submit" class="btn">Login</button>
                </div>

            </form>

            <!-- 🔻 Added "Don't have an account?" -->
            <div class="login__header">
                <span>Don't have an account?</span>
                <a href="@Url.Action("Register", "Account")" class="link">Sign up</a>
            </div>

            <!-- 🔻 Divider -->
            <div class="or-divider">
                <span>OR</span>
            </div>

            <!-- 🔻 Social buttons -->
            <div class="social-buttons">
                <a href="@Url.Action("ExternalLogin", "Account", new { provider = "Google" })"
                   class="social-btn google">
                    <img src="~/image/google-icon.svg" alt="Google" />
                    Continue with Google
                </a>


                <a href="@Url.Action("ExternalLogin", "Account", new { provider = "Facebook" })"
                   class="social-btn facebook">
                    <img src="~/image/icon-facebook.svg" alt="Facebook" />
                    Continue with Facebook
                </a>

            </div>


        </div>
    </div>
</section>




