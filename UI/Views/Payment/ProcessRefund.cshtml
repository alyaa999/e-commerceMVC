@model e_commerce.Web.ViewModels.RefundViewModel

@{

    ViewData["Title"] = "Process Refund";

    Layout = "_AdminLayout";
}

<div class="refund-confirmation-container">
    <div class="card border-0 shadow-sm">
        <div class="card-header bg-white border-bottom">
            <h2 class="h5 mb-0">Process Refund</h2>
        </div>
        <div class="card-body">
            <div class="alert alert-warning">
                <i class="fas fa-exclamation-circle me-2"></i>
                <strong>Warning:</strong> This action cannot be undone.
            </div>

            <div class="confirmation-details mb-4">
                <p class="lead mb-1">You are about to refund:</p>
                <div class="d-flex justify-content-between border-bottom pb-2 mb-2">
                    <span>Order #</span>
                    <strong>@Model.OrderId</strong>
                </div>
                <div class="d-flex justify-content-between">
                    <span>Amount</span>
                    <strong class="text-danger">$@Model.TotalPrice.ToString("N2")</strong>
                </div>
            </div>

            <form asp-action="ProcessRefund" method="post" class="needs-validation" novalidate>
                <input type="hidden" name="orderId" value="@Model.OrderId" />
                <input type="hidden" name="returnId" value="@Model.ReturnId" />

                <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                    <a asp-action="Details" asp-route-id="@Model.ReturnId" class="btn btn-outline-secondary me-md-2">
                        <i class="fas fa-arrow-left me-1"></i> Back to Details
                    </a>
                    <button type="submit" class="btn btn-danger">
                        <i class="fas fa-dollar-sign me-1"></i> Confirm Refund
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<style>
    .refund-confirmation-container {
        max-width: 600px;
        margin: 2rem auto;
    }

    .confirmation-details {
        background-color: #f8f9fa;
        padding: 1.5rem;
        border-radius: 0.25rem;
    }

    .card {
        border-radius: 0.5rem;
        overflow: hidden;
    }
</style>